{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ES2015",
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}